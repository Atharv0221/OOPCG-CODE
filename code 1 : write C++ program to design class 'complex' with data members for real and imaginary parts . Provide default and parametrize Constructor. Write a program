#include <iostream>
using namespace std;

class Complex {
private:
    double real;
    double imag;

public:
    // Default constructor
    Complex() : real(0), imag(0) {}

    // Parameterized constructor
    Complex(double r, double i) : real(r), imag(i) {}

    // Addition
    Complex add(const Complex& c) const {
        return Complex(real + c.real, imag + c.imag);
    }

    // Subtraction
    Complex subtract(const Complex& c) const {
        return Complex(real - c.real, imag - c.imag);
    }

    // Multiplication
    Complex multiply(const Complex& c) const {
        double r = real * c.real - imag * c.imag;
        double i = real * c.imag + imag * c.real;
        return Complex(r, i);
    }

    // Division
    Complex divide(const Complex& c) const {
        double denominator = c.real * c.real + c.imag * c.imag;
        if (denominator == 0) {
            cout << "Error: Division by zero complex number!" << endl;
            return Complex(0, 0);
        }
        double r = (real * c.real + imag * c.imag) / denominator;
        double i = (imag * c.real - real * c.imag) / denominator;
        return Complex(r, i);
    }

    // Display
    void display() const {
        cout << real;
        if (imag >= 0)
            cout << " + " << imag << "i";
        else
            cout << " - " << -imag << "i";
    }
};

int main() {
    Complex c1, c2, result;
    double r1, i1, r2, i2;
    int choice;

    cout << "Enter first complex number (real and imaginary parts): ";
    cin >> r1 >> i1;
    c1 = Complex(r1, i1);

    cout << "Enter second complex number (real and imaginary parts): ";
    cin >> r2 >> i2;
    c2 = Complex(r2, i2);

    do {
        cout << "\n========== Complex Number Operations ==========";
        cout << "\n1. Addition";
        cout << "\n2. Subtraction";
        cout << "\n3. Multiplication";
        cout << "\n4. Division";
        cout << "\n5. Exit";
        cout << "\nEnter your choice: ";
        cin >> choice;

        switch (choice) {
        case 1:
            result = c1.add(c2);
            cout << "\nResult (Sum): ";
            result.display();
            cout << endl;
            break;

        case 2:
            result = c1.subtract(c2);
            cout << "\nResult (Difference): ";
            result.display();
            cout << endl;
            break;

        case 3:
            result = c1.multiply(c2);
            cout << "\nResult (Product): ";
            result.display();
            cout << endl;
            break;

        case 4:
            result = c1.divide(c2);
            cout << "\nResult (Quotient): ";
            result.display();
            cout << endl;
            break;

        case 5:
            cout << "\nExiting program..." << endl;
            break;

        default:
            cout << "\nInvalid choice! Please try again." << endl;
        }

    } while (choice != 5);

    return 0;
}
